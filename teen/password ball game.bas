REM BALL
SCREEN 1
START:
ON KEY(11) GOSUB PMOVEU
ON KEY(14) GOSUB PMOVED
ON ERROR GOTO PERR
DIM BALL(166)
DIM PAD(11)
K = 1: S = 5: SB = 10: SCORE = 0: PY = 98
CLS
LINE (1, 9)-(310, 9), 1
LINE (310, 190)-(1, 190), 1
LINE (1, 190)-(1, 9), 1
LINE (306, 98)-(311, 118), 2, BF
GET (306, 98)-(311, 118), PAD
CIRCLE (135, 100), 15, 1
PAINT (135, 100), 1, 1
GET (120, 85)-(150, 115), BALL
LOCATE 1, 1
PRINT "SAVE 6 BALLS TO WIN!!         SAVES: 0"
IF T = 2 THEN GOTO SKIP
 LOCATE 10, 7
 PRINT "USE THE UP AND DOWN KEYS ON"
 LOCATE 11, 7
 PRINT "THE KEYPAD TO MOVE THE BAT."
 WHILE INKEY$ = "": WEND
KEY(11) ON: KEY(14) ON
 LOCATE 10, 7
 PRINT "                            "
 LOCATE 11, 7
 PRINT "                            "
SKIP:
RANDOMIZE (1234)
X = INT(RND * 100)
Y = INT(RND * 100)
IF Y > 85 THEN LET Y = 85
IF Y < 9 THEN LET Y = 10
PUT (120, 85), BALL
PUT (X, Y), BALL, OR
GOTO L1
LPP:
 IF K = 1 THEN SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
 Z = 1
L1:
 PUT (X, Y), BALL
 X = X + S: Y = Y + S
 PUT (X, Y), BALL, PSET
 IF X > 270 THEN GOTO MINCE
 IF Y > 150 THEN GOTO LPM
GOTO L1
LMP:
 IF K = 1 THEN SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L2:
 PUT (X, Y), BALL
 X = X - S: Y = Y + S
 PUT (X, Y), BALL, PSET
 IF X < 6 THEN GOTO LPP
 IF Y > 150 THEN GOTO LMM
GOTO L2
LPM:
 IF K = 1 THEN SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
 Z = 2
L3:
 PUT (X, Y), BALL
 X = X + S: Y = Y - S
 PUT (X, Y), BALL, PSET
 IF X > 270 THEN GOTO MINCE
 IF Y < 14 THEN GOTO LPP
GOTO L3
LMM:
 IF K = 1 THEN SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L4:
 PUT (X, Y), BALL
 X = X - S: Y = Y - S
 PUT (X, Y), BALL, PSET
 IF X < 6 THEN GOTO LPM
 IF Y < 14 THEN GOTO LMP
GOTO L4
PMOVEU:
PUT (306, PY), PAD
PY = PY - SB
IF PY < 13 THEN PY = 13
PUT (306, PY), PAD, PSET
RETURN
PMOVED:
KEY(11) ON
PUT (306, PY), PAD
PY = PY + SB
IF PY > 168 THEN PY = 168
PUT (306, PY), PAD, PSET
RETURN
VEND:
END
PRUN:
RUN
PERR:
ON ERROR GOTO L2
GOTO L1
MINCE:
Y2 = Y + 20
Y3 = Y - 5
IF PY > Y3 AND PY < Y2 THEN GOTO BOUNCE
SOUND 40, 10
T = 2
GOTO START
BOUNCE:
SCORE = SCORE + 1
LOCATE 1, 37
PRINT SCORE
IF SCORE = 6 THEN GOTO PEND
IF Z = 1 GOTO LMP
IF Z = 2 GOTO LMM
END
PEND:
LOCATE 11, 12
PRINT "CONGRATULATIONS!!!"
PLAY "O1L64MLCCCCEEEEFFFFGGGGGGGGN0"
PLAY "O1L64MLCCCCEEEEFFFFGGGGGGGGN0"
PLAY "O1L64MLCCCCEEEEFFFFGGGGGGGG"
PLAY "O1L64MLEEEEEEECCCCCCCEEEEEEEDDDDDDDDDDDD"
PLAY "O1L64MLEEEEDDDDCCCCCCCCCCEEEEEEEEGGGGGGGGN0"
PLAY "O1L64MLGGGGFFFFFFFN0"
PLAY "O1L64MLCCCCEEEEFFFFGGGGGGGG"
PLAY "O1L64MLEEEEEEECCCCCCCDDDDDDDDCCCCCCCCCCCCC"
END

