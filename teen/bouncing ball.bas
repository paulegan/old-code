REM BALL
SCREEN 1
ON KEY(10) GOSUB VEND: KEY(10) ON
ON KEY(9) GOSUB PRUN: KEY(9) ON
DIM BALL(166)
CLS
PRINT "         B  A  L  L"
PRINT : PRINT "F10 TO STOP"
PRINT ""
INPUT "WHAT STEP"; S
CLS
CIRCLE (135, 100), 15, 1
PAINT (135, 100), 1, 1
GET (110, 75)-(160, 125), BALL
X = 120
Y = 85
GOTO L1
LPP:
 SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L1:
 X = X + S: Y = Y + S
 IF X > (268) THEN GOTO LMP
 IF Y > (148) THEN GOTO LPM
 PUT (X, Y), BALL, PSET
GOTO L1
LMP:
 SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L2:
 X = X - S: Y = Y + S
 IF X < (9) THEN GOTO LPP
 IF Y > (148) THEN GOTO LMM
 PUT (X, Y), BALL, PSET
GOTO L2
LPM:
 SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L3:
 X = X + S: Y = Y - S
 IF X > (268) THEN GOTO LMM
 IF Y < (9) THEN GOTO LPP
 PUT (X, Y), BALL, PSET
GOTO L3
LMM:
 SOUND 130, 2: SOUND 130, 0: SOUND 130, 2
L4:
 X = X - S: Y = Y - S
 IF X < (9) THEN GOTO LPM
 IF Y < (9) THEN GOTO LMP
 PUT (X, Y), BALL, PSET
GOTO L4
VEND:
END
PRUN:
RUN

